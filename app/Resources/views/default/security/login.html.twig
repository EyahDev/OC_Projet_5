{% extends 'base.html.twig' %}
{% block body %}
<div class="well ">

    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-gr">
        <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Saississez votre nom d'utilisateur" />
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Saississez votre nom d'utilisateur" />
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit">Se connecter</button>

    </form>
</div>
{% endblock %}