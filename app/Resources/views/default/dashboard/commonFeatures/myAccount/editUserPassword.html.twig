{% extends 'base.html.twig' %}

{% block body %}
    <div class="well">
        {{ form_start(updatePasswordForm, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(updatePasswordForm) }}

        {# Génération du label + error + widget pour un champ. #}
        <div class="form-group">
            {{ form_widget(updatePasswordForm.password, { 'attr': {'placeholder': 'Mot de passe actuel'}}) }}
            {{ form_widget(updatePasswordForm.newPassword.first, { 'attr': {'placeholder': 'Nouveau mot de passe'}}) }}
            {{ form_widget(updatePasswordForm.newPassword.second, { 'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}

            {{ form_widget(updatePasswordForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {# Génération automatique des champs pas encore écrits.
           Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
           et tous les champs cachés (type « hidden »). #}
        {{ form_rest(updatePasswordForm) }}
        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(updatePasswordForm) }}
    </div>
{% endblock %}

