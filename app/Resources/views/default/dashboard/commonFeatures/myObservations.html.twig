<table class="table">
    <thead>
    <tr>
        <th>Modification</th>
        <th>Espèces observées</th>
        <th>Date d'observation</th>
        <th>Statut</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for observation in app.user.observations %}
        <tr>
            <td><a href="#">Modifier</a></td>
            <td>
                {% if observation.species != null %}
                    {{ observation.species.referenceName }}
                {% else %}
                    Espèce inconnu
                {% endif %}
            </td>
            <td>
                {{ observation.observationDate|date('d/m/Y') }}
            </td>
            <td>
                {% if observation.validate is same as(true) %}
                    Validée
                {% elseif observation.validate is same as(false) %}
                    Refusée
                {% elseif observation.validate is same as(null) %}
                    En attente
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
