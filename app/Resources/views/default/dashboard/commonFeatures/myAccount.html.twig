<h6>Votre mot de passe</h6>
<div class="well">
    {{ form_start(updateUserPasswordForm, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(updateUserPasswordForm) }}


    <div class="form-group row justify-content-sm-center">
        <div class="col-sm-8 row">
            {{ form_widget(updateUserPasswordForm.password, { 'attr': {'placeholder': 'Mot de passe actuel'}}) }}
        </div>
        <div class="col-sm-8 row">
            {{ form_widget(updateUserPasswordForm.newPassword.first, { 'attr': {'placeholder': 'Nouveau mot de passe'}}) }}
        </div>
        <div class="col-sm-8 row">
            {{ form_widget(updateUserPasswordForm.newPassword.second, { 'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
        </div>
        <div class="col-sm-12 row">
            {{ form_widget(updateUserPasswordForm.save, {'attr': {'class': 'btn btn-primary mx-auto  btn-user-update-password', 'url': path('edit_user_password')}}) }}
        </div>
    </div>

    {{ form_end(updateUserPasswordForm) }}
</div>
