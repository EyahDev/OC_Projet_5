<div id="flashMsgAccount"></div>
<div class="row justify-content-sm-center">
    <h6 class="col-sm-8 text-left">Vos informations personnelles :</h6>
</div>
{# Nom de l'utilisateur #}
<div class="well">
    {{ form_start(updateUserNameForm, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(updateUserNameForm) }}

    <div class="form-group row justify-content-sm-center">
        <div class="col-sm-6">
            {{ form_widget(updateUserNameForm.name) }}
        </div>
        <div class="col-sm-2">
            {{ form_widget(updateUserNameForm.save, {'label': 'Modifier', 'attr': {'class': 'btn btn-primary btn-user-update-name', 'url': path('edit_user_name')}}) }}
        </div>
    </div>
    {{ form_end(updateUserNameForm) }}
</div>

