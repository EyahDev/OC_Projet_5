{% extends 'base.html.twig' %}

{% block stylesheets %}<link href="{{ asset('css/faq.css') }}" rel="stylesheet">{% endblock %}

{% block title %}
    FAQ - {{ parent() }}
{% endblock %}

{% block header %}
    <header>
        <div class="jumbotron-faq vertical-center">
            <img class="logo-mobile" src="{{ asset('img/faq/image-header.jpg') }}" alt="logo-nao-mobile">
        </div>
        <div class="nao-header-align-left">
            <div class="nao-header nao-header-faq">
                <p class="nao-header-size1">Nao</p>
                <p class="nao-header-size2">Nos Amis les Oiseaux</p>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    {% for item in faq %}
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        {{ item.question }}
                    </h3>
                    <div class="card-text">
                        {{ item.answer }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/menu.js') }}"></script>
{% endblock %}
