{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center alert alert-danger">
        <h1>Accès non autorisé</h1>

        {% if exception.message == 'Compte desactivé' %}
            <h2>Compte désactivé</h2>
            <p>Ce compte a été désactivé par l'administrateur. pour en savoir plus, <a href="{{ path('homepage', {'_fragment': 'contact'}) }}">contactez nous</a></p>
            <p>ou <a href="{{ path('login') }}">connectez vous avec un autre compte</a></p>
        {% else %}
            <h2>Vous ne pouvez pas accéder à cette page.</h2>
        {% endif %}
    </div>
    <p class="text-center"><a href="{{ path('homepage') }}">Retour à l'accueil</a></p>
{% endblock %}